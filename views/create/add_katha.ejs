
<h2 class="text-xl font-semibold mb-2">Add Katha</h2>

<form action="/api/katha" method="POST" class="space-y-4">
    <div id="itemContainer" class="space-y-4">
        <div class="item space-y-4">
            <div>
                <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                <input type="text" id="title" name="title" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-lg" required />
            </div>

            <div>
                <label for="image" class="block text-sm font-medium text-gray-700">Image</label>
                <input type="text" id="image" name="image" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-lg" required />
            </div>
            <div>
                <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
                <input type="text" id="content" name="content" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-lg" />
            </div>
        </div>
    </div>
   
    <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md">Submit</button>
</form>

