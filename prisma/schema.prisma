generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mantra {
  id        Int      @id @default(autoincrement())
  title      String
  image      String
  content      Json    @default("[]")   
  createdAt DateTime @default(now())
}

model Widgets {
  id        Int      @id @default(autoincrement())
  position String @default("")
  type  String
  data Json 
  @@unique([position, type])
}